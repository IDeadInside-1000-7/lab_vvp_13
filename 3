#include <stdio.h>
#include <locale.h>
#include <math.h>
int main()
{
	setlocale(LC_ALL, "Russian");
	int N, i;
	printf("Введите целое число N (> 0): ");
	scanf("%i", &N);
	printf("\nПрограмма найдет квадрат данного числа, используя для его вычисления следующую формулу: N**2 = 1 + 3 + 5 + . . . + (2·N - 1)\n");
	printf("\nПри этом после добавления к сумме каждого слагаемого программа будет выводить текущее значение суммы\n\n");
	int N2 = ((2 * N) - 1);
	int s = 1;
	int d = 1;
	int tmp = pow(N, 2);
	for (i = 1; i <= N2; i += 2)
	{
		if (d < tmp)
		{
			printf("Текущее слагаемое: %i\n", s);
			printf("Текущая сумма: %i\n", d);
			s = s + 2;
			d += s;
		}
		else if (d == tmp)
		{
			printf("Текущее слагаемое: %i\n", s);
			printf("Итоговая сумма: %i\n", d);
			s = s + 2;
			d += s;
		}
	}
}
